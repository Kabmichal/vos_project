<%= form_for(@animal_food) do |f| %>
  <% if @current_user.foods.any? %>
    <div class="field">
      <%= f.label :Number_of_pieces %>
      <%= f.number_field :count%>
      <%= f.label :time %>
      <%= f.time_select(:time)%>
      <%= f.label :current_date, 'Date' %>
      <%= f.text_field :current_date %>
      <%= f.label :food_type %>
      <%= f.collection_select :food_id, @current_user.foods.order(:name),:id,:name, include_blank: false %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <% end %>
<% end %>
