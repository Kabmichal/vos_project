<% provide(:title, @animal.name) %>
<h1><%= @animal.name %></h1>
<div class="row">
  <aside class="col-md-4">

    <section class="user_info">
      <%= render 'users/user_info' %>
    </section>
    <section class="animal_foods">
      <%= render 'animals/animal_food_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @animal.animal_foods.any? %>
      <h3>Animal was feed <%= AnimalFood.count_by_sql("SELECT COUNT(*) FROM animal_foods WHERE animal_id = '#{@animal.id}'") %> times</h3>
      <ol class="zviera">
        <%= render @animal_foods %>
      </ol>
      <%= will_paginate @animal_foods %>
    <% end %>
  </div>
</div>