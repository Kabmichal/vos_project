<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>`
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.animals.any? %>
    <h2><%= @user.name %> animals</h2>
      <span>animals</span>
      <ol class="animal">
        <%= render @animals %>
      </ol>
      <%= will_paginate @animals %>
    <% end %>
  </div>
</div>