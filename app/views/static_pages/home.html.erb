
<% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'users/user_info' %>
        </section>
        <section class="animals_form">
          <%= render 'animals/animal_form' %>
        </section>
      </aside>
      <div class="col-md-8">
        <h3>My animals</h3>
        <%= render 'animals/feed' %>
      </div>
    </div>
<% else %>

<div class="center jumbotron">
  <h1>Welcome to the Pet diary App</h1>

  <h2>
    This is the home page for the
    Pet diary application.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
